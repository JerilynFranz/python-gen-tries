{
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "./tests",
    "-p",
    "test_*.py"
],
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true,
  "explorer.autoRevealExclude": {
    ".venv": true,
    "**/._.DS_Store": true,
    "bazel-bin": true,
    "bazel-datadog": true,
    "bazel-out": true,
    "bazel-testlogs": true
  },
  "files.autoSave": "afterDelay",
  "files.exclude": {
    ".venv": true,
    "**/._.DS_Store": true,
    "bazel-bin": true,
    "bazel-datadog": true,
    "bazel-out": true,
    "bazel-testlogs": true
  },
  "markiscodecoverage.searchCriteria": "${workspace_dir}/coverage/*dat",
  "terminal.integrated.env.osx": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  "python.REPL.enableREPLSmartSend": false,
  "flake8.args": [
    "--max-line-length=120"
  ]
}
